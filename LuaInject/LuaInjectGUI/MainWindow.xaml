<Window x:Class="LuaInjectGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LuaInject" SizeToContent="WidthAndHeight" MinWidth="400" MinHeight="130">
    <StackPanel VerticalAlignment="Center">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Label>Injected executable</Label>
            <TextBox Name="target" Text="C:\Program Files (x86)\Lua\5.1\lua.exe" Grid.Column="1" Margin="10,0,0,0" />
            
            <Button Width="100" Content="Start" Click="Button_Click" Margin="10" Grid.ColumnSpan="2" Grid.Row="1" />
        </Grid>
    </StackPanel>
</Window>
